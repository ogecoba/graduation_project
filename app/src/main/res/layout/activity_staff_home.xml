<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.testing.softcust.emuitapp.StaffHome"
    android:background="#000026"
    android:orientation="vertical">


    <TabHost
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabStaff"
        android:background="#ffffffff">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                ></TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:id="@+id/tabAddStaff"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="@dimen/activity_horizontal_margin"
                                android:paddingRight="@dimen/activity_horizontal_margin"
                                android:paddingTop="@dimen/activity_vertical_margin"
                                android:paddingBottom="@dimen/activity_vertical_margin"
                                android:background="#000026"
                                android:orientation="vertical"
                                >

                                <TextView
                                    android:text="@string/empID"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="25sp"
                                    android:textColor="#fff"/>

                                <EditText
                                    android:layout_width="336dp"
                                    android:layout_height="34dp"
                                    android:id="@+id/txtEmpID"
                                    android:background="#ffffffff"
                                    android:inputType="text" />

                                <TextView
                                    android:text="@string/fname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="25sp"
                                    android:textColor="#fff"/>

                                <EditText
                                    android:layout_width="336dp"
                                    android:layout_height="34dp"
                                    android:id="@+id/txtfname"
                                    android:background="#ffffffff"
                                    android:inputType="text" />

                                <TextView
                                    android:text="@string/lname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="25sp"
                                    android:textColor="#fff"/>

                                <EditText
                                    android:layout_width="336dp"
                                    android:layout_height="34dp"
                                    android:id="@+id/txtlname"
                                    android:background="#ffffffff"
                                    android:inputType="text" />

                                <TextView
                                    android:text="@string/dob"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="25sp"
                                    android:textColor="#fff"/>

                                <EditText
                                    android:layout_width="336dp"
                                    android:layout_height="34dp"
                                    android:id="@+id/txtDob"
                                    android:background="#ffffffff"
                                    android:inputType="date" />

                                <TextView
                                    android:text="@string/email"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="25sp"
                                    android:textColor="#fff"/>

                                <EditText
                                    android:layout_width="336dp"
                                    android:layout_height="34dp"
                                    android:id="@+id/txtEmail"
                                    android:background="#ffffffff"
                                    android:inputType="textEmailAddress" />

                                <TextView
                                    android:text="@string/officeNo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="25sp"
                                    android:textColor="#fff"/>

                                <EditText
                                    android:layout_width="336dp"
                                    android:layout_height="34dp"
                                    android:id="@+id/txtOfficeNo"
                                    android:background="#ffffffff"
                                    android:inputType="phone" />

                                <TextView
                                    android:text="@string/phone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="25sp"
                                    android:textColor="#fff"/>

                                <EditText
                                    android:layout_width="336dp"
                                    android:layout_height="34dp"
                                    android:id="@+id/txtPhone"
                                    android:background="#ffffffff"
                                    android:inputType="phone" />

                                <TextView
                                    android:text="@string/purl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="25sp"
                                    android:textColor="#fff"/>

                                <EditText
                                    android:layout_width="336dp"
                                    android:layout_height="34dp"
                                    android:id="@+id/txtpic"
                                    android:background="#ffffffff"
                                    android:inputType="text" />

                                <TextView
                                    android:text="@string/priv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="25sp"
                                    android:textColor="#fff"/>

                                <EditText
                                    android:layout_width="336dp"
                                    android:layout_height="34dp"
                                    android:id="@+id/txtpriv"
                                    android:background="#ffffffff"
                                    android:inputType="text" />
                                <Space
                                    android:layout_width="wrap_content"
                                    android:layout_height="16dp" />

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:gravity="center"
                                    android:text="@string/save_staff"
                                    android:textSize="25sp"
                                    android:id="@+id/btnSaveStaff"
                                    android:background="#fa6801"
                                    android:textColor="#ffffff"/>
                            </LinearLayout>
                        </HorizontalScrollView>
                    </ScrollView>
                    </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabListStaff"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/products"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:context=".ViewCategoryList"
                        />

                    </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabDeleteStaff"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <TextView android:text="Staff ID:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:textSize="25sp"
                        />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="5dp" />

                    <EditText
                        android:layout_width="336dp"
                        android:layout_height="34dp"
                        android:id="@+id/txtDStaffID"
                        android:background="#ffffffff"
                        android:inputType="text"
                        />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="5dp" />

                    <Button
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="right"
                        android:text="Delete"
                        android:textSize="25sp"
                        android:id="@+id/btnDeleteStaff"
                        android:background="#fa6801"
                        android:textColor="#ffffff"/>
                    </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>
