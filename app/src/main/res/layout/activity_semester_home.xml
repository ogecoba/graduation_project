<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.testing.softcust.emuitapp.SemesterHome"
    android:background="#000026">

    <TabHost
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/tabSemester"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffffff"></TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:id="@+id/tabAddSemester"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                    <TableLayout  android:layout_width="match_parent"
                        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:background="#000026"
                        android:orientation="vertical"
                        >

                        <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content">
                            <TextView
                                android:text="@string/sem_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="25sp"
                                android:textColor="#fff"/>

                            <EditText
                                android:layout_width="300dp"
                                android:layout_height="34dp"
                                android:id="@+id/txtSemesterID"
                                android:background="#ffffffff"
                                android:inputType="text" />
                        </TableRow>

                        <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content">
                            <TextView
                                android:text="@string/sem_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="25sp"
                                android:textColor="#fff"/>

                            <EditText
                                android:layout_width="300dp"
                                android:layout_height="34dp"
                                android:id="@+id/txtSemesterName"
                                android:background="#ffffffff"
                                android:inputType="text" />
                        </TableRow>

                        <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content">
                            <TextView
                                android:text="@string/session"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="25sp"
                                android:textColor="#fff"/>

                            <EditText
                                android:layout_width="300dp"
                                android:layout_height="34dp"
                                android:id="@+id/txtSession"
                                android:background="#ffffffff"
                                android:inputType="text" />
                        </TableRow>

                        <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content">
                            <TextView
                                android:text="@string/sem_start_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="25sp"
                                android:textColor="#fff"/>

                            <EditText
                                android:layout_width="300dp"
                                android:layout_height="34dp"
                                android:id="@+id/txtStartDate"
                                android:background="#ffffffff"
                                android:inputType="date" />
                        </TableRow>

                        <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content">
                            <TextView
                                android:text="@string/sem_end_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="25sp"
                                android:textColor="#fff"/>

                            <EditText
                                android:layout_width="300dp"
                                android:layout_height="34dp"
                                android:id="@+id/txtEndDate"
                                android:background="#ffffffff"
                                android:inputType="date" />
                        </TableRow>

                        <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/save_Semester"
                                android:textSize="25sp"
                                android:id="@+id/btnSaveSemester"
                                android:background="#fffba222"
                                android:textColor="#ffffff"/>
                        </TableRow>

                    </TableLayout>

                    </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabListSemester"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <ListView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@android:id/list">

                        </ListView>
                    </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabDeleteSemester"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"></LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>
</RelativeLayout>
